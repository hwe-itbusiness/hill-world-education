    link(href='/style.css', rel='stylesheet')
  body
    script(src='/socket.io/socket.io.js')
    script(src='cookieMonster.js')
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/') Hill World Education
        ul.nav.navbar-nav
          if home==true
            li.active
          else
            li
              a(href='/') Home
          ul.nav.navbar-nav.navbar-right
            if useraction==true
              li.dropdown.active
            else
              li.dropdown
                a.dropdown-toggle(data-toggle='dropdown', href='#')
                  | Users' Actions
                  span.caret
                ul.dropdown-menu
                  if login==true
                    li.active
                  else
                    li
                      a(href='/login.html')
                        span.glyphicon.glyphicon-log-in
                        |  Log In
                  if register==true
                    li.active
                  else
                    li
                    a(href='/register.html')
                      span.glyphicon.glyphicon-user
                      |  Register
    .container
    .page-header
      h1=pageHeader
      br
    footer.footer
      br
